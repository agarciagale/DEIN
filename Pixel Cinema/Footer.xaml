<UserControl x:Class="Pixel_Cinema.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixel_Cinema"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource HeaderFooter}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 0">
            <Button Background="White">
                <Image Margin="5" Width="30" Source="img/twitter.png"></Image>
            </Button>
            <Button Background="White">
                <Image Margin="5" Width="30" Source="img/instagram.png"></Image>
            </Button>
            <Button Background="White">
                <Image Margin="5" Width="30" Source="img/youtube.png"></Image>
            </Button>
        </StackPanel>
        <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 20 0" FontSize="20">
                Pixel Cinema ©
        </TextBlock>
    </Grid>
</UserControl>
