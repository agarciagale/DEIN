        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixel_Cinema"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="1000" MinHeight="600" MinWidth="800">
    <Grid Background="#a2a3bb">
        <Grid.RowDefinitions>
