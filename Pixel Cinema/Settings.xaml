                        <TextBlock Margin="30 3 3 3">Setting Option</TextBlock>
                        <TextBlock Margin="30 3 3 3">Setting Option</TextBlock>
                        <TextBlock>Setting Option</TextBlock>
                        <TextBlock Margin="30 3 3 3">Setting Option</TextBlock><TextBlock Margin="30 3 3 3">Setting Option</TextBlock>
                        <TextBlock Margin="30 3 3 3">Setting Option</TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3" Background="#525252">
                <TextBlock FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="10">Settings of option selected</TextBlock>
                <StackPanel>
                    
                </StackPanel>
