                            </StackPanel>

                        </Grid>
                        <Border Margin="20 2" Grid.Row="2" Style="{StaticResource ChatBar}">
                            <TextBlock VerticalAlignment="Center" FontSize="16">Message</TextBlock>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Style="{StaticResource HeaderFooter}">
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0" FontSize="20">
        Redes sociales
            </TextBlock>
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0" FontSize="20">
        Pixel Cinema
            </TextBlock>
        </Grid>
    </Grid>
</Window>
