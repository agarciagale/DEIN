<UserControl x:Class="Pixel_Cinema.AssetContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixel_Cinema"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Padding="10 5" Background="White">
            <StackPanel Orientation="Horizontal">
                <Image Width="50" Source="img/assets.png"></Image>
                <StackPanel Margin="10">
                    <TextBlock>Asset title</TextBlock>
                    <TextBlock HorizontalAlignment="Right">Author</TextBlock>
                    <Button Background="#B3B7EE">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20" Source="img/create.png"></Image>
                            <TextBlock VerticalAlignment="Center" Margin="5 0 0 0">Add</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
